                  "});",
                  "",
                  "pm.test('Response contains access token', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.access_token).to.not.be.undefined;",
                  "    pm.globals.set('access_token', response.access_token);",
                  "});",
