{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "gradle: bootRun (dev)",
            "type": "shell",
            "command": "./gradlew",
            "args": ["bootRun", "--args='--spring.profiles.active=local,development,h2'"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gradle"
        },
        {
            "label": "gradle: test (dev)",
            "type": "shell",
            "command": "./gradlew",
            "args": ["test", "--continue"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": "$gradle"
        },
        {
            "label": "Load Development Data",
            "type": "shell",
            "command": "./gradlew",
            "args": ["loadTestData"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
